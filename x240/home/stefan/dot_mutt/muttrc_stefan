source ~/.muttrc

# IMAP: offlineimap
# for stefan
set folder = "~/Mail/stefan"
set realname='Stefan Hackenberg'
set from="stefan@stefan-hackenberg.de"
set hostname="stefan-hackenberg.de"

folder-hook ~/Mail/stefan/Uni* set from="uni@stefan-hackenberg.de"

set mbox_type = Maildir

set postponed="+Drafts"      #Verzeichnis, in dem die Entw端rfe abgelegt werden. Das = ist eine Abk端rzung f端r den Inhalt von folder
set record="+Sent"           #Verzeichnis f端r die versendeten Mails  
set spoolfile="+INBOX"       #Verzeichnis, das zu Beginn aufgerufen werden soll

set sendmail = "/usr/bin/msmtp -a vlinux-stefan"

source ~/.mutt/mailboxes.stefan



